<% flash.each do |type, message| %>
  <div class="toast toast-top toast-end align-items-center border-0 position-absolute top-0 end-0 z-50 mt-5 mr-5" role="alert" aria-live="assertive" aria-atomic="true" data-controller="toast">
    <div class="flex">
      <div class="alert alert-<%= flash_class(type) %>">
        <%= message %>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-action="click->toast#close" aria-label="Close">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %>
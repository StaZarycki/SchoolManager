<div class="container mx-auto px-5 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Manage Classes</h1>
    <%= link_to "New Class", new_admin_school_class_path, class: "btn btn-primary" %>
  </div>

  <div class="overflow-x-auto">
    <table class="table table-zebra w-full">
      <thead>
      <tr>
        <th>Name</th>
        <th>Students</th>
        <th>Teachers</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @school_classes.each do |school_class| %>
        <tr>
          <td><%= school_class.name %></td>
          <td><%= school_class.students.count %></td>
          <td><%= school_class.teachers.count %></td>
          <td>
            <div class="flex gap-2">
              <%= link_to "View", admin_school_class_path(school_class), class: "btn btn-sm btn-ghost" %>
              <%= link_to "Edit", edit_admin_school_class_path(school_class), class: "btn btn-sm btn-ghost" %>
              <%= button_to "Delete", admin_school_class_path(school_class), method: :delete,
                            data: { confirm: "Are you sure?" },
                            class: "btn btn-sm btn-error" %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>